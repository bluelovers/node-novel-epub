{
  "name": "novel-epub",
  "version": "1.1.40",
  "description": "製作 node-novel 風格的 ePub 電子書 / create epub from node-novel style",
  "keywords": [
    "archive",
    "book",
    "chapter",
    "cli",
    "comic",
    "creator",
    "epub",
    "epub2",
    "epub3",
    "ebook",
    "book",
    "epub-maker",
    "epub-maker2",
    "generator",
    "maker",
    "manifest",
    "metadata",
    "mobile",
    "node-novel",
    "novel",
    "txt",
    "volume",
    "zip"
  ],
  "homepage": "https://github.com/bluelovers/node-novel-epub#readme",
  "bugs": {
    "url": "https://github.com/bluelovers/node-novel-epub/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluelovers/node-novel-epub.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "bin": {
    "novel-epub": "./bin/novel-epub.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "coverage": "npx nyc yarn run test",
    "lint": "npx eslint **/*.ts",
    "ncu": "npx yarn-tool ncu -u",
    "build:epub:test": "ts-node ./test/create-test.char-epub",
    "npm:publish": "npm publish",
    "novel-epub:help": "novel-epub --help",
    "prepublishOnly": "npx npm-check-updates -u --packageFile ./package.json && yarn run build:epub:test yarn run test",
    "postpublish": "git commit -m \"publish new version\" .",
    "sort-package-json": "npx sort-package-json ./package.json",
    "test": "npx mocha --require ts-node/register \"!(node_modules)/**/*.{test,spec}.{ts,tsx}\"",
    "tsc:default": "tsc -p tsconfig.json",
    "tsc:esm": "tsc -p tsconfig.esm.json"
  },
  "dependencies": {
    "@node-novel/normalize": "^1.0.9",
    "@toycode/markdown-it-class": "^1.1.0",
    "@types/node": "^12.6.8",
    "array-hyper-unique": "^1.0.7",
    "bluebird": "^3.5.5",
    "cjk-conv": "^1.1.83",
    "crlf-normalize": "^1.0.3",
    "debug-color2": "^1.1.6",
    "deepmerge-plus": "^2.1.3",
    "epub-maker2": "^2.4.14",
    "execall2": "^1.1.4",
    "fs-iconv": "^2.0.10",
    "is-relative": "^1.0.0",
    "lazy-url": "^1.0.8",
    "lodash": "^4.17.15",
    "markdown-it": "^9.0.1",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-implicit-figures": "^0.9.0",
    "markdown-it-include": "^1.1.0",
    "markdown-it-ruby": "^0.1.1",
    "markdown-it-title": "^1.0.4",
    "markdown-it-toc-and-anchor": "^4.2.0",
    "moment": "^2.24.0",
    "node-novel-globby": "^2.0.9",
    "node-novel-info": "^2.3.33",
    "path-dir-normalize": "^1.0.1",
    "regexp-cjk": "^3.3.7",
    "regexp-cjk-plugin-extra": "^1.0.4",
    "str-util": "^2.3.21",
    "transliteration": "^2.1.4",
    "update-notifier": "^3.0.1",
    "uuid-by-string": "^2.1.5",
    "yargs": "^13.3.0"
  },
  "devDependencies": {
    "@bluelovers/tsconfig": "^1.0.12",
    "@types/fs-extra": "^8.0.0",
    "@types/lodash": "^4.14.136",
    "@types/markdown-it": "^0.0.8",
    "novel-txt-merge": "^1.0.24"
  }
}
